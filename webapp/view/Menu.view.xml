<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout"
	xmlns:com="sap.ui.commons" xmlns="sap.m" controllerName="fr.ar.cia.controller.Menu">
	<App backgroundColor="white">
		<VBox width="100%">
			<HBox class="headerStyle" height="17%" alignItems="Center" justifyContent="SpaceBetween">
				<items>
					<Image src="resource/Image2.png" width="50%"/>
					<Image src="resource/Image1.png" width="90%"/>
				</items>
			</HBox>
			<VBox alignItems="Center" height="73%" width="100%">
				<items>
					<f:SimpleForm maxContainerCols="2" layout="ResponsiveGridLayout" labelSpanL="3" labelSpanM="3" labelSpanS="3" emptySpanL="3" emptySpanM="3"
						emptySpanS="1" columnsL="1" columnsM="1" class="editableForm">
						<f:content>
							<Label text="Auteur"/><Input id="auteur"/>
							<Label text="Site"/><Input id="site"/>
							<Label text="Atelier"/><Input id="atelier"/>
						</f:content>
					</f:SimpleForm>
					<Text text="Communication immédiate en 3 étapes" class="sapUiSmallMargin"/>
					<Text text="ETAPE 1"/>
					<Button icon="sap-icon://activity-2" text="DECLARATION" press="onStep1" width="100%" busy="false"/>
					<Text text="ETAPE 2"/>
					<Button icon="sap-icon://wounds-doc" text="DOMMAGE" press="onStep2"/>
					<Text text="ETAPE 3"/>
					<Button icon="sap-icon://forward" text="DIFFUSION DE LA CIA" press="onStep3"/>
				</items>
			</VBox>
			<HBox class="footerStyle" height="10%" alignItems="Center" justifyContent="End" displayInline="false" fitContainer="false">
				<items>
					<Image src="resource/Avril_logo_pointjaune_RVB.png" height="3em"/>
				</items>
			</HBox>
		</VBox>
	</App>
</mvc:View>