<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout"
	xmlns:com="sap.ui.commons" xmlns:coml="sap.ui.commons.layout" xmlns="sap.m" xmlns:core="sap.ui.core"
	xmlns:cust="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" controllerName="fr.ar.cia.controller.Step">
	<App backgroundColor="white">
		<Page enableScrolling="true" showFooter="false" showHeader="false">
			<VBox width="100%">
				<items>
					<HBox id="header" class="headerStyle" height="10%" alignItems="Center" justifyContent="SpaceBetween">
						<items>
							<Image id="phoneLogo" src="resource/Image2.png"/>
							<Image id="textLogo" src="resource/Image1.png"/>
						</items>
					</HBox>
					<HBox alignItems="End" justifyContent="SpaceBetween">
						<items>
							<Button id="__button3" icon="sap-icon://nav-back" press="onNavBack">
								<layoutData>
									<FlexItemData growFactor="1"/>
								</layoutData>
							</Button>
							<Button text="DOMMAGE - 2/3" width="100%" id="__button2" icon="sap-icon://wounds-doc" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"
								type="Accept">
								<layoutData>
									<FlexItemData growFactor="100"/>
								</layoutData>
							</Button>
							<Button icon="sap-icon://forward" class="sapUiSmallMarginBegin" press="onStep3">
								<layoutData>
									<FlexItemData growFactor="1"/>
								</layoutData>
							</Button>
						</items>
					</HBox>
					<coml:MatrixLayout>
						<coml:MatrixLayoutRow id="rowHead" height="17%">
							<coml:MatrixLayoutCell >
								<com:ComboBox value="FACE" width="75%"></com:ComboBox>
							</coml:MatrixLayoutCell>
							<coml:MatrixLayoutCell hAlign="Center">
								<Image id="Tete" src="resource/Tete.png" press="InjurySelect" cust:desc="Tete" cust:status="{injuries>PartiesBlessees/Tete}"/>
							</coml:MatrixLayoutCell>
							<coml:MatrixLayoutCell></coml:MatrixLayoutCell>
						</coml:MatrixLayoutRow>
						<coml:MatrixLayoutRow id="rowMiddle" height="22%">
							<coml:MatrixLayoutCell hAlign="End">
								<Image id="Bras" src="resource/Bras.png" press="InjurySelect" cust:desc="Bras" cust:status="{injuries>PartiesBlessees/Bras}"/>
							</coml:MatrixLayoutCell>
							<coml:MatrixLayoutCell hAlign="Center">
								<Image id="Torse" src="resource/Torse.png" press="InjurySelect" cust:desc="Torse" cust:status="{injuries>PartiesBlessees/Torse}"/>
							</coml:MatrixLayoutCell>
							<coml:MatrixLayoutCell halign="Begin">
								<Image id="Main" src="resource/Main.png" press="InjurySelect" cust:desc="Main" cust:status="{injuries>PartiesBlessees/Main}"/>
							</coml:MatrixLayoutCell>
						</coml:MatrixLayoutRow>
						<coml:MatrixLayoutRow id="rowBottom" height="22%">
							<coml:MatrixLayoutCell></coml:MatrixLayoutCell>
							<coml:MatrixLayoutCell hAlign="Center" vAlign="Middle">
								<FlexBox alignItems="Center" justifyContent="Center">
									<Image id="Jambe" src="resource/Jambe.png" press="InjurySelect" cust:desc="Jambe" cust:status="{injuries>PartiesBlessees/Jambe}"/>
									<Image id="Pied" src="resource/Pied.png" press="InjurySelect" cust:desc="Pied" cust:status="{injuries>PartiesBlessees/Pied}"/>
								</FlexBox>
							</coml:MatrixLayoutCell>
						</coml:MatrixLayoutRow>
					</coml:MatrixLayout >
					<VBox justifyContent="Center" alignItems="Center">
						<com:DropdownBox id="gravite" placeholder="GravitÃ©"></com:DropdownBox>
						<com:DropdownBox id="nature" placeholder="Nature du dommage"></com:DropdownBox>
						<com:DropdownBox id="cause" placeholder="Cause"></com:DropdownBox>
					</VBox>
					<HBox id="footer" class="footerStyle" height="10%" alignItems="Center" justifyContent="End" displayInline="false" fitContainer="false">
						<items>
							<Image id="avrilLogo" src="resource/Avril_logo_pointjaune_RVB.png"/>
						</items>
					</HBox>
				</items>
			</VBox>
		</Page>
	</App>
</mvc:View>
