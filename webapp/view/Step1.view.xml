<mvc:View xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout"
	xmlns:com="sap.ui.commons" xmlns="sap.m" xmlns:core="sap.ui.core" controllerName="fr.ar.cia.controller.Step">
	<App backgroundColor="white">
		<VBox width="100%">
			<items>
				<HBox class="headerStyle" height="17%" alignItems="Center" justifyContent="SpaceBetween">
					<items>
						<Image src="resource/Image2.png" width="50%"/>
						<Image src="resource/Image1.png" width="90%"/>
					</items>
				</HBox>
				<HBox height="10%" alignItems="End" justifyContent="SpaceBetween">
					<items>
						<Button id="__button3" icon="sap-icon://nav-back" press="onNavBack">
							<layoutData>
								<FlexItemData growFactor="1"/>
							</layoutData>
						</Button>
						<Button text="DECLARATION - 1/3" width="100%" id="__button2" icon="sap-icon://activity-2" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"
							type="Accept">
							<layoutData>
								<FlexItemData growFactor="100"/>
							</layoutData>
						</Button>
						<Button icon="sap-icon://wounds-doc" class="sapUiSmallMarginBegin" press="onStep2">
							<layoutData>
								<FlexItemData growFactor="1"/>
							</layoutData>
						</Button>
					</items>
				</HBox>
				<VBox height="63%" alignItems="Center" justifyContent="Start">
					<HBox alignItems="Center" justifyContent="Center">
						<core:Icon src="sap-icon://time-entry-request" size="2em" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>
						<Input width="100%"/>
						<VBox class="sapUiTinyMarginBegin">
							<Text text="Date"/>
							<Text text="Heure"/>
						</VBox>
					</HBox>
					<HBox alignItems="Center" justifyContent="Center">
						<core:Icon src="sap-icon://home" size="2em" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>
						<Input/>
						<Text text="Site" class="sapUiTinyMarginBegin"/>
					</HBox>
					<HBox alignItems="Center" justifyContent="Center">
						<core:Icon src="sap-icon://factory" size="2em" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>
						<Input/>
						<Text text="Atelier" class="sapUiTinyMarginBegin"/>
					</HBox>
					<HBox alignItems="Center" justifyContent="Center">
						<core:Icon src="sap-icon://person-placeholder" size="2em" class="sapUiTinyMarginBegin sapUiTinyMarginEnd"/>
						<ComboBox id="__box1">
							<items>
								<core:ListItem text="CDI" key="item1" id="__item6"/>
								<core:ListItem text="CDD" key="item2" id="__item7"/>
								<core:ListItem text="Stagiaire" key="item3" id="__item8"/>
							</items>
						</ComboBox>
						<items/>
					</HBox>
					<Text text="Description opération/tâches"/>
					<Input/>
					<Input/>
					<HBox>
						<Button text="DOMMAGE" class="sapUiSmallMarginEnd"/>
						<Button icon="sap-icon://action" text="Diffusion CIA" class="sapUiSmallMarginBegin"/>
					</HBox>
					<Text text="ETAPE 1/3"/>
				</VBox>
				<HBox class="footerStyle" height="10%" alignItems="Center" justifyContent="End" displayInline="false" fitContainer="false">
					<items>
						<Image src="resource/Avril_logo_pointjaune_RVB.png" height="3em"/>
					</items>
				</HBox>
			</items>
		</VBox>
	</App>
</mvc:View>